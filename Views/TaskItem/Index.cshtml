@model List<TaskItem>

<h1>Task Items</h1>

@if (Model.Count > 0)
{
    foreach (TaskItem task in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                @task.Title
            </div>
            <div class="panel-body">
                @task.Description
                @if (task.AssignedUserId != null)
                {
                    @task.AssignedUser.FirstName
                }


            </div>
        </div>

    }
} else
{
    <h3>No Tasks Exist...</h3>
}

